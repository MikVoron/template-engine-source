include critique-data.pug

section.reviews
    .container
        h2.reviews__title.section__title Рецензии
        ul.reviews__list
            each critique in critiques
                li.reviews__item
                    .reviews__wrapper
                        .reviews__info
                            .reviews__box-images
                                img.reviews__img(src= critique.picture alt="Фото автора отзыва" width="80" height="80")
                            .reviews__box
                                h3.reviews__name= critique.name
                                p.reviews__count Купил #{critique.count} книги
                        p.reviews__review= critique.review


