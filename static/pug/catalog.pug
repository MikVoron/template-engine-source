extends layout/layout

block variables
    - var title = "Страница каталога"
    - var pageClass = "catalog-page"
    - var pathContentImg = 'static/images/content/'
    - var pathCommonImg = 'static/images/common/'

block content

    main(class= catalog-page)
        include modules/breadcrumbs/breadcrumbs.pug
        section.catalog
            .container
                h1.catalog__title Каталог книг
                .catalog__wrapper
                    include modules/catalog-filters/catalog-filters.pug
                    include modules/catalog-books/catalog-books.pug
                include modules/catalog-books/books-pagination.pug





























